---
import Layout from '../layouts/Layout.astro';
import '@/styles/globals.css';
---

<Layout title='Welcome to Astro.'>
  <header
    class='mx-6 mb-8 mt-6 md:mx-10 md:mt-10 lg:mx-[5.5rem] lg:mt-[5.5rem]'
  >
    <h1 class='text-[2.5rem] font-bold leading-[3rem] text-[#260F08]'>
      Desserts
    </h1>
  </header>

  <main class='mx-6 mb-6 md:mx-10 md:mb-10 lg:mx-[5.5rem] lg:mb-[5.5rem]'>
    <section
      class='grid grid-cols-1 gap-6 md:grid-cols-3 md:gap-x-6 md:gap-y-8'
    >
      <section class='relative'>
        <picture>
          <source
            media='(min-width: 1440px)'
            srcset='/public/images/image-waffle-desktop.jpg'
          />
          <source
            media='(min-width: 1440px)'
            srcset='/public/images/image-waffle-tablet.jpg'
          />
          <img
            src='/public/images/image-waffle-mobile.jpg'
            alt='Waffle with Berries'
            class='rounded-lg'
          />
        </picture>
        <div class='mt-[2.38rem] flex flex-col gap-1'>
          <h2 class='text-sm font-normal leading-normal text-[#87635A]'>
            Waffle
          </h2>
          <h3 class='text-base font-semibold leading-normal text-[#260F08]'>
            Waffle with Berries
          </h3>
          <h4 class='text-base font-semibold leading-normal text-[#C73B0F]'>
            6.50
          </h4>
          <button
            type='button'
            class='absolute bottom-[94px] left-[75rem] flex h-11 w-40 items-center justify-center gap-2 rounded-full border border-solid border-[#87635A] bg-white text-sm font-semibold leading-normal text-[#260F08] md:left-[25px] lg:left-[112px]'
          >
            <img
              src='/public/images/icon-add-to-cart.svg'
              alt='cart'
              class=''
            />
            Add to Cart</button
          >
        </div>
      </section>
      <section class=''>
        <picture>
          <source
            media='(min-width: 1440px)'
            srcset='/public/images/image-creme-brulee-desktop.jpg'
          />
          <source
            media='(min-width: 1440px)'
            srcset='/public/images/image-creme-brulee-tablet.jpg'
          />
          <img
            src='/public/images/image-creme-brulee-mobile.jpg'
            alt=''
            class=''
          />
        </picture>
        <div class=''>
          <h2 class=''>Crème Brûlée</h2>
          <h3 class=''>Vanilla Bean Crème Brûlée</h3>
          <h4 class=''>7.00</h4>
          <button type='button' class=''>Add to Cart</button>
        </div>
      </section>
      <section class=''>
        <picture>
          <source
            media='(min-width: 1440px)'
            srcset='/public/images/image-macaron-desktop.jpg'
          />
          <source
